@model AaronOutdoors.Models.SiteUser

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="padding-left:100px">Create Your Profile</h1>


<hr />
<div style="padding-left:100px" class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdentityUserId" class="control-label"></label>
                <select asp-for="IdentityUserId" class="form-control" asp-items="ViewBag.IdentityUserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SiteUserFirstName" class="control-label"></label>
                <input asp-for="SiteUserFirstName" class="form-control" />
                <span asp-validation-for="SiteUserFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiteUserLastName" class="control-label"></label>
                <input asp-for="SiteUserLastName" class="form-control" />
                <span asp-validation-for="SiteUserLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiteUserStreetAddress" class="control-label"></label>
                <input asp-for="SiteUserStreetAddress" class="form-control" />
                <span asp-validation-for="SiteUserStreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiteUserCity" class="control-label"></label>
                <input asp-for="SiteUserCity" class="form-control" />
                <span asp-validation-for="SiteUserCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiteUserState" class="control-label"></label>
                <input asp-for="SiteUserState" class="form-control" />
                <span asp-validation-for="SiteUserState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiteUserZipCode" class="control-label"></label>
                <input asp-for="SiteUserZipCode" class="form-control" />
                <span asp-validation-for="SiteUserZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiteUserPhone" class="control-label"></label>
                <input asp-for="SiteUserPhone" class="form-control" />
                <span asp-validation-for="SiteUserPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <p>Upload Images For Your Listing Below</p>
            <div class="custom-file">

                <input asp-for="Image" type="file" class="custom-file-input" id="customFile">
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
